{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile C file (GCC-13)",
      "type": "shell",
      "command": "gcc-13",
      "args": [
        "-g",
        "-Wall",
        "-Wextra",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Compile C++ file (G++-13)",
      "type": "shell",
      "command": "g++-13",
      "args": [
        "-std=c++23",
        "-g",
        "-Wall",
        "-Wextra",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run compiled program",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "group": "test",
      "problemMatcher": []
    }
  ]
}
